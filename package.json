{
  "name": "laserweb-builder",
  "version": "1.0.0",
  "description": "Open-source laser cutter and engraver software",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "start": "./node_modules/.bin/electron .",
    "prep-work": "shx mkdir -p work",
    "prep-LaserWeb4": "cd work && git clone -b sync-package-json https://github.com/trombik/LaserWeb4",
    "update-LaserWeb4": "cd work && cd LaserWeb4 && git submodule update --init --recursive && npm ci",
    "prep": "yarn prep-work && yarn prep-LaserWeb4 && yarn update-LaserWeb4",
    "bundle-LaserWeb4": "shx cp -r work/LaserWeb4/dist ./node_modules/lw.comm-server/app/",
    "bundle": "yarn bundle-LaserWeb4",
    "build-LaserWeb4": "cd work && cd LaserWeb4 && cross-env node_modules/.bin/webpack",
    "build": "yarn build-LaserWeb4 && yarn bundle-LaserWeb4 && electron-builder",
    "clean": "shx rm -rf work",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Laserweb/LaserWeb-binaries.git"
  },
  "author": {
    "name": "Nobody",
    "email": "nobody@laserweb.yurl.ch"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/LaserWeb/LaserWeb-binaries/issues"
  },
  "homepage": "https://github.com/LaserWeb/LaserWeb-binaries#readme",
  "dependencies": {
    "electron-updater": "^4.0.0",
    "lw.comm-server": "github:trombik/lw.comm-server#557de0f6d49e5ba658db1f003132212e7d598cde",
    "ncp": "^2.0.0",
    "serialport": "^9.0.0"
  },
  "devDependencies": {
    "copyfiles": "^1.2.0",
    "cross-env": "^7.0.2",
    "electron": "^9.0.x",
    "electron-builder": "^21.2.x",
    "electron-rebuild": "^1.11.0",
    "ncp": "^2.0.0",
    "shx": "^0.3.2"
  },
  "build": {
    "appId": "xyz.laserweb",
    "productName": "LaserWeb",
    "asar": true,
    "npmRebuild": true,
    "files": [
      "**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.graphics-design"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "category": "Graphics"
    }
  },
  "postinstall": "electron-builder install-app-deps",
  "keywords": [
    "laserweb",
    "cncweb",
    "grbl",
    "smoothieware",
    "tinyg",
    "usb",
    "serial",
    "ethernet",
    "gateway",
    "ESP8266"
  ]
}
